---
import { GithubIcon } from "./icons/Github";
import { ShortcutIcon } from "./icons/Shortcut";

interface Props {
  title: string;
  body: string;
  githubLink: string;
}

const { githubLink, title, body } = Astro.props;
---

<div class="">
  <div class="rounded-lg bg-slate-700 p-4 shadow-lg">
    <h3 class="text-xl font-semibold">{title}</h3>
    <p class="mt-2">{body}</p>
    <a
      href={githubLink}
      target="_blank"
      referrerpolicy="no-referrer"
      class="mt-4 inline-block rounded bg-slate-400 px-4 py-2 text-white transition-colors duration-300 hover:bg-slate-600"
    >
      <GithubIcon class="inline h-10 w-10" />
      <ShortcutIcon class="inline h-4 w-4" />
    </a>
  </div>
</div>
