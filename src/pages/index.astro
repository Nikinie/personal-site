---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar";
import IconCarousel from "../components/IconCarousel";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout title="Niki Niemonen">
  <!-- <Navbar /> -->
  <main class="w-full px-[4%] pb-6 md:px-[8%] xl:px-[12%]">
    <div class="flex">
      <div>
        <div class="relative mt-8">
          <span
            class="absolute inset-0 select-none text-5xl font-bold text-purple-200 opacity-20 blur-md sm:text-7xl"
          >
            Niki Niemonen
          </span>
          <span class="relative text-5xl font-bold text-purple-200 sm:text-7xl"
            >Niki Niemonen</span
          >
        </div>
        <p class="mt-10 text-3xl sm:text-5xl">
          I'm a <a class="underline decoration-purple-400">Software Engineer</a>
        </p>
        <p class="mt-4 text-3xl sm:text-5xl">
          Currently employed at <a
            target="_blank"
            referrerpolicy="no-referrer"
            href="https://www.fellowmind.com/en/about-us/key-facts-and-figures/"
            class="rounded-md bg-slate-800 stroke-blue-200 px-1 text-blue-200 hover:stroke-fuchsia-600 hover:text-fuchsia-600"
          >
            <span class="underline decoration-fuchsia-500"
              >Fellowmind Finland</span
            >
            <svg
              viewBox="0 0 24 24"
              fill="none"
              class="mb-4 ml-0 inline h-4 w-4"
            >
              <path
                d="M21 9L21 3M21 3H15M21 3L13 11M10 5H7.8C6.11984 5 5.27976 5 4.63803 5.32698C4.07354 5.6146 3.6146 6.07354 3.32698 6.63803C3 7.27976 3 8.11984 3 9.8V16.2C3 17.8802 3 18.7202 3.32698 19.362C3.6146 19.9265 4.07354 20.3854 4.63803 20.673C5.27976 21 6.11984 21 7.8 21H14.2C15.8802 21 16.7202 21 17.362 20.673C17.9265 20.3854 18.3854 19.9265 18.673 19.362C19 18.7202 19 17.8802 19 16.2V14"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </p>
        <div class="flex gap-2">
          <button
            type="button"
            copy-button
            class="mt-8 flex transform items-center rounded bg-purple-700 p-2 pl-4 text-lg text-white shadow-lg shadow-purple-500/50 transition-transform duration-[50ms] active:scale-[0.98]"
          >
            niki.niemonen@gmail.com
            <svg
              class="ml-2 h-8 w-8"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                copy-svg
                class="fill-white transition-colors duration-75"
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M19.5 16.5L19.5 4.5L18.75 3.75H9L8.25 4.5L8.25 7.5L5.25 7.5L4.5 8.25V20.25L5.25 21H15L15.75 20.25V17.25H18.75L19.5 16.5ZM15.75 15.75L15.75 8.25L15 7.5L9.75 7.5V5.25L18 5.25V15.75H15.75ZM6 9L14.25 9L14.25 19.5L6 19.5L6 9Z"
              ></path>
            </svg>
          </button>
          <a
            class="mt-8 flex transform items-center rounded bg-slate-700 stroke-blue-200 p-2 pl-4 text-lg transition-transform duration-[50ms] hover:stroke-fuchsia-300 hover:text-fuchsia-300 active:scale-[0.98]"
            target="_blank"
            referrerpolicy="no-referrer"
            href="https://www.linkedin.com/in/niki-niemonen-bb14a4294/"
            ><span class="decoration-slate-500">LinkedIn</span>
            <svg
              viewBox="0 0 24 24"
              fill="none"
              class="mb-4 ml-2 inline h-4 w-4"
            >
              <path
                d="M21 9L21 3M21 3H15M21 3L13 11M10 5H7.8C6.11984 5 5.27976 5 4.63803 5.32698C4.07354 5.6146 3.6146 6.07354 3.32698 6.63803C3 7.27976 3 8.11984 3 9.8V16.2C3 17.8802 3 18.7202 3.32698 19.362C3.6146 19.9265 4.07354 20.3854 4.63803 20.673C5.27976 21 6.11984 21 7.8 21H14.2C15.8802 21 16.7202 21 17.362 20.673C17.9265 20.3854 18.3854 19.9265 18.673 19.362C19 18.7202 19 17.8802 19 16.2V14"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg></a
          >
        </div>
      </div>
    </div>

    <div class="mt-12 w-full">
      <p class="text-xl">Some tech i've worked with</p>
      <IconCarousel />
    </div>

    <div class="mt-12 w-full">
      <p class="text-xl">Personal projects</p>
      <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-3">
        <ProjectCard
          title="Redis clone in Go"
          body="A simple redis clone in Go, and a client in C#"
          githubLink="https://github.com/Nikinie/redis-clone"
        />
        <ProjectCard
          title="Kotlin TODO API"
          body="A simple REST API for a todo list using Ktor"
          githubLink="https://github.com/Nikinie/ktor-todo"
        />
      </div>
    </div>

    <script>
      const copySvgPathElements = document.querySelectorAll("[copy-svg]");
      const buttons = document.querySelectorAll("[copy-button]");
      buttons.forEach((button) => {
        button.addEventListener("mousedown", () => {
          navigator.clipboard.writeText("niki.niemonen@gmail.com");
          copySvgPathElements.forEach((pathEl) => {
            pathEl.classList.remove("fill-white");
            pathEl.classList.add("fill-green-600");
          });
        });
        button.addEventListener("focusout", () => {
          copySvgPathElements.forEach((pathEl) => {
            pathEl.classList.remove("fill-green-600");
            pathEl.classList.add("fill-white");
          });
        });
      });
    </script>
    <style></style>
  </main>
</Layout>
